<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.MedicoMenuActivity">

    <TextView
        android:id="@+id/nombreMedicoTexView"
        android:text="Ana Lilia Salgado Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/especialidadTextView"
        android:text="Odontología"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nombreMedicoTexView"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/direccionMedicoTextView"
        android:text="Tuxpan # 16 902B Roma Norte, Cuauhtémoc, D.F. C.P. 06700"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/portafolioTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/coordenadasMedicoTextView"
        android:text="Coordenadas: 34 cuadrante 23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/direccionMedicoTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/portafolioTextView"
        android:text="Portafolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/especialidadTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout">

        <Button
            android:id="@+id/checkinButton"
            android:text="Iniciar"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/entregadoButton"
            android:text="Entregado"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cerrarReporteButton"
            android:text="Cerrar Reporte"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/cancelarButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/ubicadoButton"
            android:text="Ubicado"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/cancelarButton"
            android:layout_toStartOf="@+id/descartadoButton"
            android:layout_toLeftOf="@+id/descartadoButton"
            android:layout_weight="1" />

        <Button
            android:id="@+id/descartadoButton"
            android:text="Descartado"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/ubicadoButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/especialidadTextView"
            android:layout_alignStart="@+id/especialidadTextView"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/cancelarButton"
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginTop="10dp" />


</RelativeLayout>
