<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.CapturarPaqueteActivity">

    <TextView
        android:id="@+id/nombreMedicoTexView"
        android:text="Ana Lilia Salgado Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/especialidadTextView"
        android:text="Odontología"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nombreMedicoTexView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true" />


    <Button
        android:id="@+id/cancelarPedidoButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/continuarButton"
        android:text="Continuar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:text="Código Paquete:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/codigoPaqueteEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codigoPaqueteEditText"
        android:singleLine="true"
        android:layout_below="@+id/especialidadTextView"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="20" />

    <TextView
        android:id="@+id/mensajeErrorTextView"
        android:text="¡No fue localizado el paquete!\nVerifique los datos del paquete."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff4032"
        android:layout_above="@+id/cancelarPedidoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/buscarPaqueteButton"
        android:text="BUSCAR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escanearButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/escanearButton"
        android:text="ESCANEAR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
