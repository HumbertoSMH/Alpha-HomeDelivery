<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.FotografiaAutorizadaActivity">

    <TextView
        android:id="@+id/especialidadTextView"
        android:text="Odontología"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/nombreMedicoTexView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/nombreMedicoTexView"
        android:text="Ana Lilia Salgado Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/indicacionesTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOMAR FOTO FRENTE"
            android:id="@+id/tomarFotoFrenteButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR FOTO"
            android:id="@+id/eliminarFotoFrenteButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:id="@+id/linearLayout5">

        <ImageView
            android:id="@+id/fotoFrenteImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/muestra_credencial"
            android:layout_gravity="center"
            android:contentDescription="Fotografía parte frontal de la identificación" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOMAR FOTO ATRÁS"
            android:id="@+id/tomarFotoAtrasButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR FOTO"
            android:id="@+id/eliminarFotoAtrasButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp">

    <ImageView
        android:id="@+id/fotoAtrásImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/muestra_credencial"
        android:layout_gravity="center"
        android:contentDescription="Fotografía parte posterior de la identificación" />
    </LinearLayout>

    <Button
        android:id="@+id/cancelarButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/continuarButton"
        android:text="Continuar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cancelarButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captura las fotografías de la identificación de la persona autorizada."
        android:id="@+id/indicacionesTextView"
        android:layout_below="@+id/especialidadTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
