<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.DetalleEntregaActivity">

    <TextView
        android:id="@+id/nombreMedicoTexView"
        android:text="Ana Lilia Salgado Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/especialidadTextView"
        android:text="OdontologÃ­a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nombreMedicoTexView"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tituloDetalleEntregaTextView"
        android:text="Detalle de la Entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/especialidadTextView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/productosListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelarEntregaButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/tituloDetalleEntregaTextView" />

    <Button
        android:id="@+id/cancelarEntregaButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/guardarEntregaButton"
        android:text="Continuar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productosListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/codigoPaqueteTextView"
        android:text="Paquete: 683482jhdghfhjs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_below="@+id/tituloDetalleEntregaTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

</RelativeLayout>
