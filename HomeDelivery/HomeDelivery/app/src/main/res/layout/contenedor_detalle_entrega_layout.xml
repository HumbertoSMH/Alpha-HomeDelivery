<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.ContenedorDetalleEntrega">

    <RelativeLayout
        android:id="@+id/celdaProductoEntregaLinearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:weightSum="1">

        <TextView
            android:id="@+id/nombreMedicamentoTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="AZITROCIN 500 MG"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cantidadTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: 5"
            android:layout_below="@+id/nombreMedicamentoTextView"
            android:layout_alignLeft="@+id/nombreMedicamentoTextView"
            android:layout_alignStart="@+id/nombreMedicamentoTextView" />
        <TextView
            android:id="@+id/loteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lote: 23456789 "
            android:layout_below="@+id/cantidadTextView"
            android:layout_alignLeft="@+id/nombreMedicamentoTextView"
            android:layout_alignStart="@+id/nombreMedicamentoTextView"
            android:layout_alignRight="@+id/nombreMedicamentoTextView"
            android:layout_alignEnd="@+id/nombreMedicamentoTextView" />

        <TextView
            android:id="@+id/caducidadTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caducidad: Sep 2201"
            android:layout_below="@+id/loteTextView"
            android:layout_alignLeft="@+id/loteTextView"
            android:layout_alignStart="@+id/loteTextView"
            android:layout_alignRight="@+id/loteTextView"
            android:layout_alignEnd="@+id/loteTextView" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/posicionTextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/loteTextView"
            android:layout_toEndOf="@+id/loteTextView" />

    </RelativeLayout>


</RelativeLayout>
