<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="algroup.com.mx.homedelivery.controller.ComentariosActivity">

    <TextView
        android:id="@+id/nombreMedicoTexView"
        android:text="Ana Lilia Salgado Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/especialidadTextView"
        android:text="Odontología"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nombreMedicoTexView"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="end" />

    <CheckBox
        android:id="@+id/cambioDatosCheckBox"
        android:text="Cambio Datos Médico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/especialidadTextView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/comentarioEditText"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:hint="Indica el comentario..."
        android:ems="10"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/cambioDatosTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="1000"
        android:layout_above="@+id/cancelarComentarioButton" />

    <Button
        android:id="@+id/cancelarComentarioButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cerrarReporteButton"
        android:text="Cerrar Reporte"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelarComentarioButton"
        android:layout_alignRight="@+id/comentarioEditText"
        android:layout_alignEnd="@+id/comentarioEditText" />



</RelativeLayout>
