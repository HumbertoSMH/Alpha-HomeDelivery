<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin_min"
    android:paddingRight="@dimen/activity_horizontal_margin_min"
    android:paddingTop="@dimen/activity_vertical_margin_min"
    android:paddingBottom="@dimen/activity_vertical_margin_min"
    tools:context="algroup.com.mx.homedelivery.controller.ContenedorMedicosActivity">


    <LinearLayout
        android:id="@+id/celdaMedicoLinearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:weightSum="1"
        android:layout_margin="0dp">

        <TextView
            android:id="@+id/medicoTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="ANA LILIA SALGADO LOPEZ"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/especialidadTextView"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:text="Odontología - Cirugía general "
            android:layout_below="@+id/medicoTextView"
            android:layout_alignLeft="@+id/medicoTextView"
            android:layout_alignStart="@+id/medicoTextView"
            android:layout_alignRight="@+id/medicoTextView"
            android:layout_alignEnd="@+id/medicoTextView"
            android:textSize="14dp"
            android:textStyle="bold"
            android:singleLine="false"
            android:maxLines="2"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/coordenadasMedicoTextView"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:text="Hoja 16 / seccion 13"
            android:layout_below="@+id/medicoTextView"
            android:layout_alignLeft="@+id/medicoTextView"
            android:layout_alignStart="@+id/medicoTextView"
            android:layout_alignRight="@+id/medicoTextView"
            android:layout_alignEnd="@+id/medicoTextView"
            android:textSize="14dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="italic"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/direccionTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:text="Tuxpan # 16 902B Roma Norte, Cuauhtémoc, D.F. C.P. 06700"
            android:layout_below="@+id/especialidadTextView"
            android:layout_alignLeft="@+id/medicoTextView"
            android:layout_alignStart="@+id/medicoTextView"
            android:layout_alignRight="@+id/medicoTextView"
            android:layout_alignEnd="@+id/medicoTextView"
            android:textSize="12dp"
            android:layout_weight="0.61"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/estatusView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estatus"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/celdaMedicoLinearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />


    </LinearLayout>

</RelativeLayout>
