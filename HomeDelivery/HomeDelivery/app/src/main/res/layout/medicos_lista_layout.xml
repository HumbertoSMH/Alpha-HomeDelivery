<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin_min"
    android:paddingRight="@dimen/activity_horizontal_margin_min"
    android:paddingTop="@dimen/activity_vertical_margin_min"
    android:paddingBottom="@dimen/activity_vertical_margin_min"
    tools:context="algroup.com.mx.homedelivery.controller.MedicosListaActivity">

    <TextView
        android:id="@+id/usuarioMedicosTextView"
        android:text="Bienvenid@ Juan González"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/salirMedicosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tituloMedicosAVisitarTextView"
        android:text="Medicos en Ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salirMedicosButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/fechaRutaTextView"
        android:text="Jueves 16 -Abril -2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloMedicosAVisitarTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ListView
        android:id="@+id/medicosListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaRutaTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/mensajeSinPaquetesTextView"
        android:text="¡No existen paquetes cargados!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaRutaTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="#ffff0f14" />

</RelativeLayout>